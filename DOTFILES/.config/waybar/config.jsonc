{
	"layer": "top",
	"position": "top",
	"height": 30,
	"modules-left": [
		"network",
		"custom/void",
		"network#net2",
		"custom/network-gui",
    "custom/changenetworkdisplay"
	],
	"modules-center": [
		"hyprland/workspaces"
	],
	"modules-right": [
		"wlr/taskbar",
		"custom/space",
		"bluetooth",
    "clock",
		"custom/space",
		"pulseaudio#sink",
		"pulseaudio/slider",
		"custom/space",
		"custom/poweroff",
		"custom/reboot",
		"custom/lock",
		"custom/swaync"
	],

	"hyprland/workspaces": {
		"active-only": false,
		"all-outputs": true,
		"on-scroll-up": "hyprctl dispatch workspace -1",
		"on-scroll-down": "hyprctl dispatch workspace +1",
		"format": "{name}",
		"on-click": "activate",
		"height": 0
	},
  
  "wlr/taskbar": {
    "icon-size": 23,
    "on-click": "activate",
    "format": "{icon}"
  },

  "custom/changenetworkdisplay": {
    "icon-size": 23,
    "on-click": "kitty --class MyScriptWindow -e ~/.config/scripts/set_waybar_iface.sh",
    "format": "ÔÄ° "
  },

  "bluetooth": {
    "format": "Ôäì ",
    "on-click": "blueman-manager",
    "interval": 60
  },

	"clock": {
	  "format": "ÔÄó  {:%H:%M} ",
    "on-click": "gnome-clocks",
    "interval": 60
  }, 

	"network": {
		"interval": 5,
		"interface": "enp7s0",
		"format": "{ifname}",
		"format-wifi": " {ifname}",
		"format-ethernet": "{ifname}",
